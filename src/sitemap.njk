---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
# To remove a page from the sitemap add this into frontmatterâ€“ sitemapIgnore: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in collections.all %}
        {%- if page.data.sitemapIgnore !== true %}
            {% if not page.data.draft %}
            <url>
                <loc>{{ meta.siteURL }}{{ page.url | url }}</loc>
                <lastmod>{{ page.data.dateUpdated.toISOString() if page.data.dateUpdated else page.date.toISOString() }}</lastmod>
                <changefreq>{{ page.data.changeFreq if page.data.changeFreq else "monthly" }}</changefreq>
            </url>
            {% endif %}
        {% endif %}
    {% endfor %}
</urlset>